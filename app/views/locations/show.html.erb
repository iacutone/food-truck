<div class='container-fluid'>
	<div class='row-fluid'>
		<div class='span3'>
		<p class='make_bold'>Manhattan Food Truck Finder</p>
		<% if @locations == [] %>
			No recent tweets.
		<% else %>
			Recent tweets by:
				<ul><%- @locations.sort_by(&:time).reverse.each do |l| %>
					<li id='<%= l.id %>'><%= l.truck.name %></li>
				<% end %>
				</ul>
			<% end %>
		</div>
		
	</div>
</div>